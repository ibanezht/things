{
    "compilerOptions": {
      "target": "ES2016",
      "module": "commonjs",
      "lib": ["esnext"],
      "allowJs": true,
      "removeComments": true,
      "strict": true,
      "outDir": "build",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "composite": true
    },
    "include": ["src/**/*"]
  }